<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hacı Ayşe Ateş Anadolu Lisesi</title>
    <link rel="stylesheet" href="/public/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="header">
      <div class="container header-inner">
        <div class="brand">
          <a href="/"><img src="/public/images/logo.jpg" alt="logo" class="logo-img"></a>
          <a class="site-title" href="/">Hacı Ayşe Ateş Anadolu Lisesi</a>
        </div>
        
        <!-- Hamburger Menü Butonu (Sadece mobilde görünür) -->
        <button class="menu-toggle" onclick="toggleMenu()">☰</button>
        
        <nav class="nav" id="mainNav">
          <a href="/">Anasayfa</a>
          <a href="/hakkimizda">Hakkımızda</a>
          <a href="/projeler">Projeler</a>
          <a href="/kulup">Yazılım Kulübü</a>
          <a href="/iletisim">İletişim</a>
        </nav>
      </div>
    </header>
    <main>
      <%- body %>
    </main>
    <footer class="footer">
      <div class="container footer-inner">
        <div class="footer-left">
          <img src="/public/images/logo.jpg" alt="logo" class="logo-small">
          <p>© <%= new Date().getFullYear() %> Hacı Ayşe Ateş Anadolu Lisesi - Tüm hakları saklıdır.</p>
        </div>
        <div class="footer-right">
          <p>Adres: Eski Habipler Mahallesi, Demirci Caddesi No:26, Sultangazi/İstanbul</p>
          <p>Telefon: 0212 595 25 45</p>
        </div>
      </div>
    </footer>
    
    <script>
      function toggleMenu() {
        const nav = document.getElementById('mainNav');
        nav.classList.toggle('active');
      }

      // Menü dışına tıklandığında menüyü kapat
      document.addEventListener('click', function(event) {
        const nav = document.getElementById('mainNav');
        const menuToggle = document.querySelector('.menu-toggle');
        
        if (window.innerWidth <= 800) {
          if (!nav.contains(event.target) && !menuToggle.contains(event.target)) {
            nav.classList.remove('active');
          }
        }
      });
    </script>
    
    <script src="/public/js/main.js"></script>
  </body>
</html>